{
  "name": "dhikr-reminder",
  "displayName": "Dhikr Reminder",
  "description": "A kind reminder of your dhikr's for better productivity",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:dhikr-reminder.selectAdhkar",
    "onCommand:dhikr-reminder.changeAdhkar"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dhikr-reminder.selectCategory",
        "title": "Select Category",
        "category": "DhikrReminder"
      },
      {
        "command": "dhikr-reminder.changeCategory",
        "title": "Change Category",
        "category": "DhikrReminder"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
